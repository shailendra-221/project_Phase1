<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
      <div class="col-8 offset-2">
        <br><br>
    <h3>Create a New Listing</h3>
    <form 
      method="POST" 
      action="/listings" 
      novalidate class="needs-validation" 
      enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input class="form-control" type="text" name="listing[title]" placeholder="enter title" required>
      <div class="valid-feedback">Title looks good!</div>
      </div>
      
      <div class="mb-3">
        <label class="form-label" for="description" >Description</label>
        <textarea
          class="form-control"
          name="listing[description]"
          required
         ></textarea>
         <div class="invalid-feedback">Please Enter a short description !</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="image" >Upload Listing Image</label>
        <input class="form-control" name="listing[image]" type="file" required/>
      </div>
      
      <div class="row">
        <div class="mb-3 col-md-4">
          <label class="form-label" for="price" >Price</label>
          <input class="form-control" name="listing[price]" placeholder="1200" required />
          <div class="invalid-feedback">Please Enter a Valid Price!</div>
        </div>
  
        <div class="mb-3 col-md-8">
          <label class="form-label" for="country" >Country</label>
          <input class="form-control" name="listing[country]" placeholder="India" type="text" required />
          <div class="invalid-feedback">Please Enter the Country name!</div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="location" >Location</label>
        <input class="form-control" name="listing[location]" placeholder="Delhi" type="text"
        required />
        <div class="invalid-feedback">Please Enter the valid location!</div>
      </div> 
      <button class="btn btn-dark add-btn mt-3">Add</button>
      
    </form>
  </div>
  </div>

  